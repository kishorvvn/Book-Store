@model BookManagements.ViewModels.EditRoleViewModel

@{
    ViewBag.Title = "Edit role";
}

<h1>Edit Role</h1>

<form method="post" class="mt-3 col-sm-8 mx-auto d-block">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row text-center">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-info">Update</button>
            <a asp-action="ListRoles" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>

<div>
    <div>
        <h3>Users in this role</h3>
    </div>
    <div class=" col-md-8 border rounded mb-2 shadow-sm" >
        @if (Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <h6 class="card-title">@user</h6>
            }
        }
        else
        {
            <h5 class="card-title">Currently no user is assigned in this role</h5>
        }
    </div>
    <div>
        <a asp-action="EditUsersInRole" 
            asp-controller="Administration" 
            asp-route-roleId="@Model.Id" class="btn btn-info text-white">Add or remove users</a>
       
    </div>
</div>