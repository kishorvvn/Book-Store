@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<h1> Roles assigned</h1>

@if (Model.Any())
{
    <div class="card-title">
        <a class="btn btn-info" asp-controller="Administration" asp-action="CreateRole">
            Create role
        </a>
    </div>


    <table class="table table-sm table-bordered col-sm-8 mx-auto">
        <thead>
            <tr>
                <th>Role Id</th>
                <th>Role Name</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var role in Model)
        {
            <tbody>
                <tr>
                    <td> @role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        <a class="btn btn-info text-white" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id"> Edit </a>
                        <a class="btn btn-danger text-white"asp-controller="Administration" asp-action="DeleteRole"  asp-route-id="@role.Id"> Delete </a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
}
else
{
    <div class="card text-center">
        <div class="card-header">
            <h4> Opps...</h4>
        </div>
        <div class="card-body mx-auto">
            <h4>No roles has been assigned.</h4>
            <h4>Click button below to create one.</h4>
        </div>
        <div class="card-footer">
            <a class="btn btn-info" asp-controller="Administration" asp-action="CreateRole">
                Create role
            </a>
        </div>
    </div>
}