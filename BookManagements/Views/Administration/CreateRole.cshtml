@model BookManagements.ViewModels.CreateRoleViewModel

@{
    ViewBag.Title = "Create Role";
}

<h1 class="">Create Role</h1>

<form method="post" class="mt-3 col-sm-8 mx-auto d-block">

    <div asp-validation-summary="All" class="text-danger d-block"></div>

    <div class="form-group row ">
        <label asp-for="RoleName" class="col-sm-3 col-form-label font-weight-bold"></label>
        <input asp-for="RoleName" class="col-sm-9">

    </div>
     <div class="form-group">
        <button class=" btn btn-success mx-auto d-block" type="submit">
           Create Role
        </button>
    </div>

</form>