@model BookManagements.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<h1 class="">User Registration</h1>

<form method="post" class="mt-3 col-sm-8 mx-auto d-block">

    <div asp-validation-summary="All" class="text-danger d-block"></div>
   


        <div class="form-group row ">
            <label asp-for="FullName" class="col-sm-3 col-form-label font-weight-bold"></label>
            <input asp-for="FullName" class="col-sm-9">

        </div>
        <div class="form-group row ">
            <label asp-for="City" class="col-sm-3 col-form-label font-weight-bold"></label>
            <input asp-for="City" class="col-sm-9">

        </div>
        <div class="form-group row ">
            <label asp-for="PhoneNumber" class="col-sm-3 col-form-label font-weight-bold"></label>
            <input asp-for="PhoneNumber" class="col-sm-9">

        </div>
        <div class="form-group row ">
            <label asp-for="Address" class="col-sm-3 col-form-label font-weight-bold"></label>
            <input asp-for="Address" class="col-sm-9">

        </div>
        <div class="form-group row ">
            <label asp-for="Country" class="col-sm-3 col-form-label font-weight-bold"></label>
            <input asp-for="Country" class="col-sm-9">

        </div>
        <div class="form-group row ">
            <label asp-for="Zip" class="col-sm-3 col-form-label font-weight-bold"></label>
            <input asp-for="Zip" class="col-sm-9">

        </div>
        

    <div class="form-group row ">
        <label asp-for="Email" class="col-sm-3 col-form-label font-weight-bold"></label>
        <input asp-for="Email" class="col-sm-9" />

    </div>
    <div class="form-group row ">
        <label asp-for="Password" class="col-sm-3 col-form-label font-weight-bold"></label>
        <input asp-for="Password" class="col-sm-9">

    </div>
    <div class="form-group row ">
        <label asp-for="ConfirmPassword" class="col-sm-3 col-form-label font-weight-bold"></label>
        <input asp-for="ConfirmPassword" class="col-sm-9" />

    </div>



    <div class="form-group">
        <button class=" btn btn-success mx-auto d-block" type="submit">
            Register
        </button>
    </div>

</form>