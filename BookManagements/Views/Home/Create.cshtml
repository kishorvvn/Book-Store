@model BookManagements.ViewModels.BookCreateViewModel
@{
    ViewBag.Title = "Add a new Book";
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post" class="mt-3 col-sm-8 mx-auto d-block">

    <div asp-validation-summary="All" class="text-danger d-block"></div>
    <div class="form-group row ">
        <label asp-for="CategoryId" class="col-sm-2 col-form-label font-weight-bold"></label>
        <select id="CategoryId" name="CategoryId" class="col-sm-9">
            <option value="0">Select Category</option>
            <option value="1">Sports</option>
            <option value="2">History</option>
            <option value="3">Education</option>
            <option value="4">Cooking</option>
            <option value="5">Fiction</option>
            <option value="6">Arts</option>
        </select>

    </div>
    <div class="form-group row ">
        <label asp-for="Title" class="col-sm-2 col-form-label font-weight-bold"></label>
        <input asp-for="Title" class="col-sm-9" />

    </div>
    <div class="form-group row ">
        <label asp-for="Author" class="col-sm-2 col-form-label font-weight-bold"></label>
        <input asp-for="Author" class="col-sm-9">

    </div>
    <div class="form-group row ">
        <label asp-for="ISBN" class="col-sm-2 col-form-label font-weight-bold"></label>
        <input asp-for="ISBN" class="col-sm-9" />

    </div>
    <!--


    <div class="form-group row ">
        <label asp-for="Description" class="col-sm-2 col-form-label font-weight-bold"></label>
        <input asp-for="Description" class="col-sm-9" />

    </div>
    <div class="form-group row ">
        <label asp-for="PublishedDate" class="col-sm-2 col-form-label font-weight-bold"></label>
        <input asp-for="PublishedDate" class="col-sm-9" />

    </div>
         -->
    <div class="form-group row ">
        <label asp-for="Price" class="col-sm-2 col-form-label font-weight-bold"></label>
        <input asp-for="Price" class="col-sm-9" />

    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="control-label col-sm-2 col-form-label font-weight-bold"></label>
        <div class="custom-file col-sm-9">
            <input asp-for="Photo" class="form-control custom-file-input" />
            <label class="custom-file-label">Choose file...</label>
        </div>
    </div>
    <div class="form-group">
        <button class=" btn btn-success mx-auto d-block" type="submit">
            Add a book
        </button>
    </div>
    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>
